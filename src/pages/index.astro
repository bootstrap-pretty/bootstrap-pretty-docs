---
import Layout from '@layouts/Layout.astro';
import { SITE } from '@config';
import PALETTES from 'bootstrap-pretty/palettes.json';
import PalettePreviewList from '@components/PalettePreviewList.astro';
const featuredPalettes = PALETTES.filter(x => x.tags.includes('featured'));
---

<Layout title={SITE.title} description={SITE.description}>
	<section class="container-xxl pt-4 pb-5">
		<h1 class="display-1 text-center"><strong><span class="font-handwriting text-primary">Pretty</span> Palettes for Bootstrap</strong></h1>
		<div class="d-flex flex-wrap justify-content-center">
			<div class="bp-copy-code-snippet bp-copy-code-snippet-lg m-1">
				<code id="codeSnippetInstall" class="bp-copy-code-snippet-text">yarn add bootstrap-pretty</code>
				<button class="btn btn-lg bp-copy-code-snippet-trigger" data-clipboard-target="#codeSnippetInstall" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Copy">
					<span class="visually-hidden">Copy</span>
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
						<path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
						<path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
					</svg>
				</button>
			</div>
			<a class="btn btn btn-primary btn-lg m-1" href="palettes/dracula#importing">Quick Start</a>
		</div>
	</section>
	{
		featuredPalettes.length && (
			<section class="container-xxl mb-4">
				<PalettePreviewList palettes={featuredPalettes}  />
			</section>
		)
	}
</Layout>
